---
/**
 * ShortcutRow â€” Keyboard shortcut + description row
 *
 * Two-column layout: key caps on the left, description on the right.
 * Compose multiple ShortcutRows in a list for a shortcuts table.
 */

import KeyboardKey from './KeyboardKey.astro';

interface Props {
  keys: string[];
  description: string;
}

const { keys, description } = Astro.props;
---

<div class="shortcut-row">
  <div class="shortcut-row__keys">
    {keys.map((k) => <KeyboardKey key={k} />)}
  </div>
  <span class="shortcut-row__desc">{description}</span>
</div>

<style>
  .shortcut-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-subtle);
  }

  .shortcut-row:last-child {
    border-bottom: none;
  }

  .shortcut-row__keys {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    flex-shrink: 0;
    min-width: 6rem;
  }

  .shortcut-row__desc {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }
</style>
