---
/**
 * SectionHeader â€” Terminal-header styled section heading
 *
 * Uses .terminal-header for the gradient + ">" prefix effect.
 */

interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="section-header">
  <h2 class="section-header__title terminal-header">{title}</h2>
  {subtitle && (
    <p class="section-header__subtitle">{subtitle}</p>
  )}
</div>

<style>
  .section-header {
    padding: 0.75rem 0;
    margin-bottom: 2rem;
  }

  .section-header__title {
    margin: 0 0 0.5rem;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.2;
  }

  .section-header__subtitle {
    margin: 0;
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    padding-left: 2.5rem; /* align with title text (past the ">" prefix) */
  }
</style>
