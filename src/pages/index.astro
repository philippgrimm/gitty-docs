---
import MarketingLayout from '../layouts/MarketingLayout.astro';
const base = import.meta.env.BASE_URL;
---

<MarketingLayout title="gitty — A macOS Git Client with Soul">
  <header>
    <!-- Navbar placeholder — Task 20 will add Navbar component -->
  </header>

  <main>
    <section id="hero" class="py-16 px-4 max-w-6xl mx-auto">
      <p class="text-[var(--text-secondary)] font-display text-lg">Hero section coming soon</p>
    </section>

    <section id="features" class="py-16 px-4 max-w-6xl mx-auto">
      <p class="text-[var(--text-secondary)] font-display text-lg">Features section coming soon</p>
    </section>

    <section id="shortcuts" class="py-16 px-4 bg-[var(--surface-1)]">
      <div class="max-w-6xl mx-auto">
        <p class="text-[var(--text-secondary)] font-display text-lg">Shortcuts section coming soon</p>
      </div>
    </section>

    <section id="screenshots" class="py-16 px-4 max-w-6xl mx-auto">
      <p class="text-[var(--text-secondary)] font-display text-lg">Screenshots gallery coming soon</p>
    </section>
  </main>

  <footer class="py-16 px-4 bg-[var(--surface-2)]">
    <div class="max-w-6xl mx-auto">
      <p class="text-[var(--text-secondary)] font-display text-lg">Download CTA coming soon</p>
    </div>
  </footer>
</MarketingLayout>
