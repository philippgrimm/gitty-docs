---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
  description?: string;
}
const { title, description = 'A beautifully crafted, retro-themed macOS Git client.' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#F2EFE9" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Gitty" />
    <link rel="canonical" href="https://philippgrimm.github.io/gitty-docs/" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://philippgrimm.github.io/gitty-docs/" />
    <meta property="og:image" content="https://philippgrimm.github.io/gitty-docs/og-image.svg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://philippgrimm.github.io/gitty-docs/og-image.svg" />

    <link
      rel="stylesheet"
      href="https://fonts.bunny.net/css?family=instrument-sans:400,500,600|jetbrains-mono:400,500,600|pixelify-sans:400,500,600,700|press-start-2p:400"
    />
  </head>
  <body class="min-h-screen bg-[var(--surface-0)] text-[var(--text-primary)] font-sans retro-paper crt-scanlines">
    <!-- Skip navigation — first focusable element, visually hidden until focused -->
    <a href="#main-content" class="skip-to-content">Skip to content</a>
    <Navbar />
    <slot />
  </body>
</html>

<style>
  /* ── Skip-to-content link ──────────────────────────────────────
     Visually hidden off-screen until focused via keyboard.
     Appears at top-left with accent background for clear visibility.
  ──────────────────────────────────────────────────────────────── */
  .skip-to-content {
    position: absolute;
    top: -100%;
    left: 0;
    z-index: 200;
    padding: 0.75rem 1.5rem;
    background: var(--accent);
    color: #ffffff;
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    letter-spacing: 0.05em;
    border-bottom-right-radius: 4px;
    transition: top 0.15s ease;
  }
  .skip-to-content:focus {
    top: 0;
  }
</style>
